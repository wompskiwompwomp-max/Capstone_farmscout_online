{
  "name": "farmscout/online",
  "description": "FarmScout Online - Agricultural Price Monitoring System",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "phpmailer/phpmailer": "^6.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "FarmScout\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "test": "phpunit tests/",
    "install-production": "composer install --no-dev --optimize-autoloader"
  }
}